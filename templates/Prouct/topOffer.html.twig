<h2>Top offer</h2>

{% for product in products %}
    <div>
        <h3>{{ product.name }}</h3>
        {% if product.flags is not empty %}
            Flags:
            {% for flag in product.flags %}
                {{ flag.name }}
                {% if not loop.last %}, {% endif %}
            {% endfor %}
        {% endif %}
        <p>
            Price: {{ product.price }}
        </p>
    </div>
{% endfor %}